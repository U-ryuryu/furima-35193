<%= render "shared/second-header"%>

<div class='transaction-contents'>
  <div class='transaction-main'>
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">ニックネーム</th>
          <td class="detail-value"><%= current_user.nickname %></td>
        </tr>
        <tr>
          <th class="detail-item">メールアドレス</th>
          <td class="detail-value"><%= current_user.email %></td>
        </tr>
        <tr>
          <th class="detail-item">お名前</th>
          <td class="detail-value"><%= current_user.last_name + "  " + current_user.first_name %></td>
        </tr>
        <tr>
          <th class="detail-item">お名前カナ</th>
          <td class="detail-value"><%= current_user.read_last_name + "  "  + current_user.read_first_name %></td>
        </tr>
        <tr>
          <th class="detail-item">生年月日</th>
          <td class="detail-value"><%= "#{current_user.birthday.year}年#{current_user.birthday.mon}月#{current_user.birthday.mday}日" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= render "shared/second-footer"%>